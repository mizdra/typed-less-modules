{
  "name": "typed-less-modules",
  "version": "1.0.1",
  "description": "TypeScript type definition generator for LESS CSS Modules",
  "main": "index.js",
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/awexfwex/typed-less-modules"
  },
  "keywords": [
    "less",
    "css modules",
    "cli",
    "typescript",
    "type generator",
    "less modules"
  ],
  "scripts": {
    "test": "jest",
    "tlm": "ts-node ./lib/cli.ts",
    "clean": "rm -rf ./dist",
    "build": "yarn clean && tsc",
    "prepack": "yarn build",
    "check-types": "tsc --noEmit",
    "check-formatting": "prettier --check '**/*.{js,json,css,md,less,tsx,ts}'"
  },
  "files": [
    "dist/lib"
  ],
  "bin": {
    "tlm": "./dist/lib/cli.js"
  },
  "devDependencies": {
    "@types/camelcase": "^4.1.0",
    "@types/css-modules-loader-core": "^1.1.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^27.4.1",
    "@types/less": "0.0.32",
    "@types/node": "17.0.21",
    "@types/param-case": "^1.1.2",
    "@types/yargs": "^12.0.8",
    "husky": "^1.3.1",
    "jest": "^27.5.1",
    "less": "3.x.x",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "ts-jest": "^27.1.3",
    "ts-node": "^8.0.2",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "less": "3.x.x"
  },
  "dependencies": {
    "@types/reserved-words": "^0.1.0",
    "camelcase": "^5.0.0",
    "chalk": "^2.4.2",
    "chokidar": "^2.1.2",
    "css-modules-loader-core": "^1.1.0",
    "glob": "^7.1.3",
    "less-plugin-css-modules": "^0.0.3",
    "less-plugin-npm-import": "^2.1.0",
    "param-case": "^2.1.1",
    "path": "^0.12.7",
    "postcss": "^8.4.8",
    "reserved-words": "^0.1.2",
    "slash": "^3.0.0",
    "source-map": "^0.7.3",
    "yargs": "^12.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,less,tsx,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
